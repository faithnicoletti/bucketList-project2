<%- include('../partials/header') %>
<a href="/dreams/hobbiesCompleted">
    <button class="w-20 m-2 btn btn-sm btn-outline-dark">Back</button>
  </a>
<div class="pricing-header p-3 pb-md-4 mx-auto text-center">
  <h1 class="display-4 fw-normal text-body-emphasis shadow-sm m-5">Personal Growth: Accomplished</h1>
  </div>
<div class="row row-cols-2 row-cols-md-3 mb-3 text-center justify-content-center align-items-center">
  <div class="col">
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3">
        <h4 class="my-0 fw-normal"><%= hobby.name %></h4>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mt-4 mb-4">
          <p class="m-3"><strong>Description:</strong></p> 
          <p><%= hobby.description %></p>
          <p class="m-3"><strong>Comments/Thoughts:</strong></p> 
          <p><%= hobby.comments %></p>
          <p class="m-3"><strong>Photos:</strong></p> 
          <p><%= hobby.photos %></p>
        </ul>
      </div>
      <div class="justify-content-end">
        <a href="/dreams/edit-hobbyCompleted/<%= hobby.id %>">
          <button type="button" class="w-100 btn btn-lg btn-outline-dark">celebrate by adding more details!</button>
        </a>   
      </div>
    </div>         
    <form action="/dreams/hobbiesCompleted/<%=hobby.id%>?_method=DELETE" method="POST">
      <input type="hidden" value="X"/>
      <button type="button" class="w-25 btn btn-lg btn-outline-danger">Forget</button>
    </form>   
  </div>
<%- include('../partials/footer') %>