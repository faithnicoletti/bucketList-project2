<%- include('../partials/header') %>
<div class="pricing-header p-3 pb-md-4 mx-auto text-center">
  <h1 class="display-4 fw-normal text-body-emphasis shadow-sm m-5">Travel Destinations</h1>
  </div>
<div class="row row-cols-2 row-cols-md-3 mb-3 text-center justify-content-center align-items-center">
  <div class="col">
    <div class="card mb-4 rounded-3 shadow-sm">
      <div class="card-header py-3">
        <h4 class="my-0 fw-normal">Goals Listed Here:</h4>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mt-4 mb-4">
          <% travels.forEach((travel) => { %>
            <li>
              <a href="/dreams/travels/<%= travel.id %>">
                <button type="button" class="w-50 m-1 btn btn-md btn-outline-dark"><%= travel.name %></button>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
    <a href="/dreams/new-travel">
      <button type="button" class="w-100 btn btn-lg btn-outline-secondary">Create New</button>
    </a>          
  </div>
<%- include('../partials/footer') %>
